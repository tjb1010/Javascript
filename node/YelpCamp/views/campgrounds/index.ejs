<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>

      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg"
          >Add New Campground</a
        >
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>

  <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top" />
        <h5 class="card-title">
          <%= campground.name %>
        </h5>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>

    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
