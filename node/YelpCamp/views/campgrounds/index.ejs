<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <h1 class="text-center"><i class="fas fa-campground"></i> Welcome To YelpCamp!</h1>
    <p class="text-center">View our hand-picked campgrounds from all over the world</p>
    <p class="text-center">
      <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </p>
  </div>
</header>

  <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="card">
        <img src="<%= campground.image %>" class="card-img-top" />
        <h5 class="card-title">
          <%= campground.name %>
        </h5>
        <p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>

    <% }); %>
  </div>

<% include ../partials/footer %>
