<% include ../partials/header %>
<div class="row">
  <div style="width: 30%; margin: 0 auto;">
    <h1 class="whiteText" style="text-align: center">Create a New Campground</h1>
    <form action="/campgrounds" method="POST">
      <div class="form-group">
      <label>Campground</label>
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="Name of Campground"
        />
      </div>
      <div class="form-group">
        <label>Upload an Image from Unsplash</label>
        <input
          class="form-control"
          type="text"
          name="image"
          pattern="^https:\/\/images\.unsplash\.com\/.*"
          placeholder="https://images.unsplash.com/..."
          required
        />
        <small class="whiteText"
          >Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on
          how to copy unsplash urls.</small
        >
      </div>
      <div class="form-group">
      <label>Price</label>
        <input
          class="form-control"
          type="number"
          name="price"
          placeholder="Price Per Night"
          step="0.01"
          min="0"
          required
        />
      </div>
      <div class="form-group">
      <label>Park Where Campground is Located</label>
        <input
          class="form-control"
          type="text"
          name="location"
          placeholder="Name of the park"
        />
      </div>
      <div class="form-group">
      <label>Description of Campground</label>
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="Write a Description of the Campground"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
    </form>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>
<% include ../partials/footer %>
